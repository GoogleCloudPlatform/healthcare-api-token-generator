<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="CreateAuthRequestPayload">
    <DisplayName>CreateAuthRequestPayload</DisplayName>
    <Properties/>
    <Set>
        <Payload contentType="application/json" variablePrefix="@" variableSuffix="#">
        {
            "applicationName":"@authRequest.applicationName#", 
            "grantType":"@authRequest.grantType#",
            "scopes":"@authRequest.scopes#",
            "key": @private.iam.gcpClientApiSecret#
        }
        </Payload>
        <Verb>POST</Verb>
    </Set>
    <AssignVariable>
        <Name>target.copy.pathsuffix</Name>
        <Value>false</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>